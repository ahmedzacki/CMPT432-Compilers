{
  "compilerOptions": {
    "target": "ES2016",
    "rootDir": "./src",
    "outDir": "./dist",
    "sourceMap": true,
    "extendedDiagnostics": true,
    "noEmitOnError": true,
    "removeComments": true,
    "strict": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "module": "es6"
  },

  "include": ["./src/**/*.ts"]
}
